<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itzhang.mapper.RoleMapper">

    <select id="getRoleByRoleId" resultType="java.lang.String">
        select role_name from role where id = #{id}
    </select>
    <select id="getAuthByRoleId" resultType="java.lang.String">
        select auth_name from role_auth where role_id = #{id}
    </select>
</mapper>
