<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itzhang.mapper.UserMapper">
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert into user value (#{id}, #{username}, #{password}, #{role_id}, #{salt})
    </insert>

    <select id="getAllUser" resultType="com.itzhang.pojo.User">
        select id, username, password, salt, role_id from user
    </select>
    <select id="getUserByUsername" resultType="com.itzhang.pojo.User" parameterType="String">
        select id, username,password, salt, role_id from user where username=#{username}
    </select>

</mapper>
